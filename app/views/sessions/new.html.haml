=provide(:title, 'Login')
%h1
  Login

=form_for(:session, url: sessions_path , :html => {:class => "form-horizontal"}) do |f|
  %div{:class=>"row-fluid"}
    %div{:class=>"span4"}
      = f.label :email
      = f.text_field :email
    %div{:class=>"span4"}
      = f.label :password
      = f.password_field :password
  %br
  = f.submit(:class=>"btn btn-primary btn-large", :value => 'Login')
%hr
%p
  Ti sei per caso
  =link_to "dimenticato la password?", new_password_reset_path
%p
  Oppure devi
  =link_to "registrarti?", new_user_path


