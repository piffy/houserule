%h1 Modifica di #{@user.name}

= render 'shared/error_shared', :user => @user

= form_for(@user)  do |f|

  = f.label :name
  = f.text_field :name
  %br
  = f.label :email
  = f.text_field :email
  %br
  %h5 La password va sempre inserita
  = f.label :password , 'Password (Se si vuole cambiarla)'
  = f.password_field :password
  %br
  = f.label :password_confirmation , 'Conferma password'
  = f.password_field :password_confirmation
  %br
  = f.label :nick , 'Nickname'
  = f.text_field :nick
  %br
  = f.label :location , "Luogo"
  = f.text_field :location
  %br
  = f.label :description , 'Qualcosa su di te:'
  %br
  = f.text_area :description
  %br
  = f.submit "Modifica"

