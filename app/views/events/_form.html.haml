= form_for @event do |f|
  -if @event.errors.any?
    #error_explanation
      %h2= "#{@event.errors.count} errori non hanno reso possibile il salvataggio dell'evento:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, 'Nome'
    = f.text_field :name
  .field
    = f.label :system, 'Sistema'
    = f.text_field :system
  .field
    = f.label :begins_at, 'Inizio'
    = f.datetime_select :begins_at
  .field
    = f.label :deadline , 'Confermare entro'
    = f.datetime_select :deadline
  .field
    = f.label :duration, 'Durata'
    = f.text_field :duration
  .field
    = f.label :descr_short , 'Descrizione breve'
    = f.text_field :descr_short
  .field
    = f.label :description , 'Descrizione'
    = f.text_area :description
  .field
    = f.label :location, 'Luogo'
    = f.text_field :location
  .field
    = f.label :max_player_num, 'Massimo giocatori'
    = f.number_field :max_player_num
  .field
    = f.label :min_player_num, 'Minimo giocatori'
    = f.number_field :min_player_num
  .actions
    = f.submit 'Invia'
