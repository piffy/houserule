%h1 Registrazione nuovo utente

= render 'shared/error_shared', :user => @user

= form_for(@user)  do |f|

  = f.label :name
  = f.text_field :name
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :password , 'Password (6-15 lettere max)'
  = f.password_field :password
  %br
  = f.label :password , 'Conferma Password'
  = f.password_field :password_confirmation
  %br
  = f.submit "Crea utente"