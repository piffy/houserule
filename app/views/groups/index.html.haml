=provide(:title, 'Gruppi')
%h1 Elenco gruppi

=will_paginate

%table{:class => "table table-striped"}
  %tr
    %th Nome
    %th Descrizione
    %th Creato da
    %th Luogo
    %th Iscritti
    %th
    %th
    %th

  - @groups.each do |group|
    %tr
      %td=  link_to group.name, group
      %td= group.description
      %td=  link_to group.user.name, group.user
      %td= group.location
      %td= 0
      %td= link_to 'Sito', group.website_url, :class =>"btn" unless group.website_url.blank?
      %td= link_to 'Modifica', edit_group_path(group), :class =>"btn"
      %td= link_to 'Iscriviti', "#", :class =>"btn btn-primary" unless group.user==current_user

%br

=will_paginate

= link_to 'Crea gruppo', new_group_path
